@model WebAppApiConsuming.Models.User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>Login Form</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div clss="form-group">
                <label asp-for="@Model.UserName" class="Control-label">UserName</label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div clss="form-group">
                <label asp-for="@Model.Password" class="Control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <label>@Html.Raw(@ViewBag.Message)</label>
        </form>
    </div>
</div>

